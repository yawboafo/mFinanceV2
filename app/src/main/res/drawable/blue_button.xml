<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="1dip" />
            <stroke android:width="1dip" android:color="#03509a" />
            <gradient  android:angle="-90"  android:startColor="#1e009a" android:endColor="#132f9a"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="1dip" />
            <stroke android:width="1dip" android:color="#000000" />
            <solid  android:color="#b71e1e1e"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="1dip" />
            <stroke android:width="1dip" android:color="#194e9a" />
            <gradient  android:angle="-90"  android:startColor="#194e9a" android:endColor="#194e9a" />
        </shape>
    </item>
</selector>